<div class="card">
  <%= link_to image_tag(prototype.image.variant(resize: '500x500')), prototype_path(prototype.id), class: :'card__img' if prototype.image.attached? %>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype.id), class: :card__title %>
    <p class="card__summary">
      <%= link_to prototype.catch_copy, prototype_path(prototype.id), class: :card__catch_copy %>
    </p>
    <%= link_to "by #{prototype.user.name}", prototype_path(prototype.id), class: :card__user %>
  </div>
</div>